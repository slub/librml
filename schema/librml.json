{
  "$id": "https://librml.org/schema/librml.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "description": "LibRML schema version 0.4.0",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "tenant": {
      "type": "string",
      "format": "uri"
    },
    "mention": {
      "type": "boolean"
    },
    "sharealike": {
      "type": "boolean"
    },
    "commercialuse": {
      "type": "boolean"
    },
    "copyright": {
      "type": "boolean"
    },
    "template": {
      "type": "string"
    },
    "usageguide": {
      "type": "string",
      "format": "uri"
    },
    "actions": {
      "$ref": "#/$defs/actions_type"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "tenant"
  ],
  "$defs": {
    "restrictions_type": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "parts",
              "group",
              "age",
              "location",
              "date",
              "duration",
              "count",
              "concurrent",
              "watermark",
              "quality",
              "agreement"
            ]
          },
          "permission": {
            "type": "boolean"
          },
          "fromdate": {
            "type": "string",
            "format": "date"
          },
          "todate": {
            "type": "string",
            "format": "date"
          },
          "maxresolution": {
            "type": "integer",
            "minimum": 1
          },
          "maxbitrate": {
            "type": "integer",
            "minimum": 1
          },
          "count": {
            "type": "integer",
            "minimum": 1
          },
          "sessions": {
            "type": "integer",
            "minimum": 1
          },
          "watermarkvalue": {
            "type": "string",
            "format": "uri"
          },
          "duration": {
            "type": "integer",
            "minimum": 1
          },
          "minage": {
            "type": "integer",
            "minimum": 1
          },
          " maxage": {
            "type": "integer",
            "minimum": 1
          },
          "property": {
            "type": "boolean"
          }
        },
        "additionalProperties": false,
        "required": [
          "type"
        ]
      }
    },
    "actions_type": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "displaymetadata",
              "read",
              "run",
              "lend",
              "download",
              "print",
              "reproduce",
              "modify",
              "reuse",
              "distribute",
              "publish",
              "archive",
              "index",
              "move"
            ]
          },
          "permission": {
            "type": "boolean"
          },
          "restrictions": {
            "$ref": "#/$defs/restrictions_type"
          },
          "additionalProperties": false
        },
        "required": [
          "permission",
          "type"
        ]
      }
    }
  }
}